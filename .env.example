# ===================================
# AQUAMIND Environment Configuration
# ===================================
# Copier ce fichier vers .env et ajuster selon vos besoins

# ===== SERVICE PORTS =====
FRONTEND_PORT=3000
BACKEND_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ===== DATABASE CONFIG =====
POSTGRES_DB=aquamind
POSTGRES_USER=aquamind
POSTGRES_PASSWORD=aquamind
POSTGRES_HOST=postgres
POSTGRES_CONTAINER_PORT=5432

DATABASE_URL=postgresql://aquamind:aquamind@postgres:5432/aquamind

# ===== REDIS CONFIG =====
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# ===== BACKEND CONFIG =====
BACKEND_LOG_LEVEL=INFO
BACKEND_ENV=production
BACKEND_RELOAD=false
BACKEND_WORKERS=4
API_TITLE=AQUAMIND
API_VERSION=1.0.0

# ===== CORS CONFIG =====
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002,http://aquamind.local
CORS_CREDENTIALS=true

# ===== SECURITY =====
SECRET_KEY=your-secret-key-change-in-production-12345678901234567890
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===== MONITORING =====
# Prometheus
PROMETHEUS_SCRAPE_INTERVAL=30s
PROMETHEUS_DATA_RETENTION=30d

# Grafana
GF_SECURITY_ADMIN_PASSWORD=aquamind
GF_SECURITY_ADMIN_USER=admin
GF_URL=http://localhost:3001
GF_INSTALL_PLUGINS=grafana-piechart-panel

# ===== GEOSPATIAL =====
# Centre de la carte (Senegal River Basin)
MAP_CENTER_LAT=13.5
MAP_CENTER_LON=-12
MAP_INITIAL_ZOOM=7

# ===== DATA SIMULATION =====
# Pour développement - remplacer par APIs réelles en production
USE_SIMULATED_DATA=true
SIMULATION_SEED=42
SEASONAL_FACTOR_AMPLITUDE=0.3

# ===== EXTERNAL APIS =====
# Google Earth Engine
GEE_PROJECT_ID=your-gee-project-id
GEE_CREDENTIALS_FILE=/secrets/gee-credentials.json

# OpenWeather
OPENWEATHER_API_KEY=your-openweather-api-key
OPENWEATHER_UNITS=metric

# ECMWF
ECMWF_API_KEY=your-ecmwf-api-key
ECMWF_DATA_PATH=/data/ecmwf

# ===== EMAIL NOTIFICATIONS =====
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_ADDRESS=aquamind-alerts@example.com

# ===== SMS NOTIFICATIONS (Twilio) =====
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===== LOGGING =====
LOG_FORMAT=json
LOG_LEVEL=INFO
LOG_FILE=/var/log/aquamind/app.log

# ===== PERFORMANCE =====
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
CACHE_TTL_MINUTES=30

# ===== DEPLOYMENT =====
ENVIRONMENT=development
DOCKER_IMAGE_VERSION=1.0.0
DOCKER_REGISTRY=your-registry.com

# ===== OPTIONAL: AWS/GCP/AZURE =====
# AWS
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=aquamind-data

# GCP
GCP_PROJECT_ID=your-gcp-project
GCP_REGION=europe-west1

# Azure
AZURE_RESOURCE_GROUP=aquamind-rg
AZURE_SUBSCRIPTION_ID=your-subscription-id
